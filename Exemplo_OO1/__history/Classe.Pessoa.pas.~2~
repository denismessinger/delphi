unit Classe.Pessoa;

interface

uses
  System.Sysutils, System.DateUtils;

type
  TPessoa = class
  strict private
    FSaldo : Currency;
    FDataNascimento : TDate;
  strict protected
    FCodigo : Integer;
  public
    property Codigo : Integer read FCodigo write SetCodigo;
    property Saldo : Currency read FSaldo write SetSaldo;
    property DataNascimento : TDate read FDataNascimento write DataNascimento;
  end;

implementation

end.
